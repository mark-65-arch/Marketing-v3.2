---
import MainLayout from '../layouts/MainLayout.astro';
import type { BreadcrumbItem } from '../utils/seo.ts';
import CheckCircleIcon from '../components/icons/CheckCircleIcon.astro';
import ChevronDownIcon from '../components/icons/ChevronDownIcon.astro';
import ClockIcon from '../components/icons/ClockIcon.astro';
import EnvelopeIcon from '../components/icons/EnvelopeIcon.astro';
import LockIcon from '../components/icons/LockIcon.astro';
import PhoneIcon from '../components/icons/PhoneIcon.astro';
import QuestionCircleIcon from '../components/icons/QuestionCircleIcon.astro';
import ShieldIcon from '../components/icons/ShieldIcon.astro';
import GoogleFormFacade from '../components/GoogleFormFacade.astro';

// üîç SEO Configuration
const pageTitle = 'Get in Touch';
const pageDescription = 'Contact Marketing AI Houston for a free consultation. We help Houston small businesses get found online with AI-powered web design and SEO services.';
const canonicalURL = `${import.meta.env.SITE}${import.meta.env.BASE_URL}contact`;

// üçû Breadcrumbs
const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', url: import.meta.env.BASE_URL },
  { name: 'Contact', url: `${import.meta.env.BASE_URL}contact` }
];

// üõ°Ô∏è CSP hashes for contact page inline scripts
// iframe script hash: sha256-yJmBxiBN4AeSn7iBlg4OWHPT0EsUF6nCxNGCkynYDTI=
// accordion script hash: sha256-jQ9jE2f/RdmljlEiEL5/wzUpriXsUrG9h9ByoESgO5w=
// critical-css script hash: sha256-[TO_BE_CALCULATED]
---

<MainLayout
  title={pageTitle}
  description={pageDescription}
  canonicalURL={canonicalURL}
  breadcrumbs={breadcrumbs}
  pageType="contact"
  currentPath="/contact"
>
    <!-- ‚ö° Critical CSS for Hero Section - Inlined for fastest LCP -->
    <style slot="head">
        /* Critical hero styles - Total: ~2.8KB minified */
        /* Base layout prevents CLS */
        .hero-section{position:relative;overflow:hidden;padding-top:5rem;padding-bottom:5rem}
        @media(min-width:768px){.hero-section{padding-top:6rem;padding-bottom:6rem}}

        /* Hero container */
        .hero-container{position:relative;z-index:10;padding-left:1rem;padding-right:1rem;max-width:56rem;margin-left:auto;margin-right:auto}

        /* Text center layout */
        .hero-text-center{text-align:center}

        /* Stars visual cue */
        .hero-stars{color:#facc15;font-size:1.875rem;line-height:2.25rem;margin-bottom:0.5rem}

        /* Tagline */
        .hero-tagline{color:#374151;margin-bottom:2rem;font-weight:500}

        /* H1 Hero headline - CRITICAL for LCP */
        .hero-h1{font-size:3rem;line-height:1;font-weight:900;color:#111827;line-height:1.25;margin-bottom:1.5rem}
        @media(min-width:768px){.hero-h1{font-size:3.75rem;line-height:1}}
        @media(min-width:1024px){.hero-h1{font-size:4.5rem;line-height:1}}

        /* Subheadline */
        .hero-subheadline{font-size:1.25rem;line-height:1.75rem;color:#374151;margin-bottom:3rem;max-width:42rem;margin-left:auto;margin-right:auto;line-height:1.625}

        /* Primary CTA button */
        .hero-cta{display:inline-block;background:linear-gradient(to right,#2563eb,#0d9488);color:#fff;font-weight:600;padding-top:1rem;padding-bottom:1rem;padding-left:3rem;padding-right:3rem;border-radius:9999px;transition:all .3s;transform:scale(1);box-shadow:0 10px 15px -3px rgba(0,0,0,.1),0 4px 6px -2px rgba(0,0,0,.05);margin-bottom:1.5rem;text-decoration:none}
        .hero-cta:hover{background:linear-gradient(to right,#1e3a8a,#2563eb);transform:scale(1.05)}

        /* CTA badge */
        .hero-cta-badge{background:#facc15;color:#000;padding-left:0.5rem;padding-right:0.5rem;padding-top:0.25rem;padding-bottom:0.25rem;border-radius:0.25rem;font-weight:700}

        /* Supporting text */
        .hero-support-text{color:#374151;margin-bottom:4rem}

        /* Prevent layout shift */
        h1,h2,h3,p{margin:0}
        .hero-h1{min-height:4.5rem}
        @media(min-width:768px){.hero-h1{min-height:5.25rem}}

        /* Gradient text styling to match service pages */
        .text-gradient{background:linear-gradient(135deg,#3b82f6,#14b8a6);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;color:transparent;font-weight:900!important}
    </style>

    <!-- Hero Section -->
    <section class="hero-section">
        <!-- Text background elements -->
        <div class="absolute inset-0 opacity-5 hidden md:block">
            <div class="text-9xl font-bold absolute top-10 left-10 text-blue-900">LISTEN</div>
            <div class="text-9xl font-bold absolute top-1/2 right-10 text-teal-600">CONNECT</div>
            <div class="text-9xl font-bold absolute bottom-10 left-1/3 text-blue-600">GROW</div>
        </div>

        <div class="hero-container">
            <div class="hero-text-center">
                <!-- Visual Cue (Stars) -->
                <div class="hero-stars">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>

                <!-- Tagline -->
                <p class="hero-tagline">Built for small businesses that want to grow</p>

                <!-- Headline - CRITICAL LCP ELEMENT -->
                <h1 class="hero-h1">
                    <span class="text-gradient">Let's Talk About Your Business</span>
                </h1>

                <!-- Subheadline -->
                <p class="hero-subheadline">
                    Whether you're ready to launch or just exploring options, we'd love to hear from you.
                </p>

                <!-- Primary CTA Button -->
                <a href="#contact-options" class="hero-cta">
                    üëâ Schedule a <span class="hero-cta-badge">FREE</span> Discovery Call
                </a>

                <!-- Supporting One Liner -->
                <p class="hero-support-text">No pressure, no jargon ‚Äî just a quick chat to see if we're a fit.</p>
            </div>
        </div>
    </section>


    <!-- Contact Options Section -->
    <section id="contact-options" class="py-20 md:py-24 relative overflow-hidden">
        <!-- Background elements -->
        <div class="absolute top-0 left-0 w-full h-full opacity-5">
            <div class="absolute top-0 right-0 w-96 h-96 bg-teal-600 rounded-full filter blur-3xl"></div>
            <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-600 rounded-full filter blur-3xl"></div>
        </div>

        <div class="container mx-auto max-w-6xl px-4 relative z-10">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-black mb-4">
                    <span class="text-gradient">Choose How You'd Like to Connect</span>
                </h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Schedule a Discovery Call -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-white border-opacity-50 text-center">
                    <div class="text-6xl mb-6">üìÖ</div>
                    <h3 class="text-2xl font-bold mb-4 text-blue-900 font-poppins">Schedule a Discovery Call</h3>
                    <p class="text-gray-700 mb-6">Use our calendar to pick a time that works for you.</p>
                    <a href="https://calendly.com/marketingaihouston/free-discovery-call" target="_blank" rel="noopener noreferrer" class="inline-block mt-4 bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-900 hover:to-blue-600 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 transform hover:scale-105 no-underline">
                        Book Now
                    </a>
                </div>

                <!-- Send a Message -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-white border-opacity-50 text-center">
                    <div class="text-6xl mb-6">üìù</div>
                    <h3 class="text-2xl font-bold mb-4 text-blue-900 font-poppins">Send a Message</h3>
                    <p class="text-gray-700 mb-6">Fill out our quick form and we'll reply within 1 business day.</p>
                    <a href="#contact-form" class="inline-block mt-4 bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-900 hover:to-blue-600 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 transform hover:scale-105 no-underline">
                        Send Message
                    </a>
                </div>

                <!-- Call or Email Directly -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-white border-opacity-50 text-center">
                    <div class="text-6xl mb-6">üìû</div>
                    <h3 class="text-2xl font-bold mb-4 text-blue-900 font-poppins">Call or Email Us Directly</h3>
                    <p class="text-gray-700 mb-6">Prefer to reach out directly? We're just a click away.</p>
                    <div class="space-y-3 mt-4">
                        <a href="tel:+12815440572" class="flex items-center justify-center bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-900 hover:to-blue-600 text-white font-semibold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 no-underline">
                            <PhoneIcon class="mr-2" />
                            (281) 544-0572
                        </a>
                        <a href="mailto:team@marketingaihouston.com" class="flex items-center justify-center bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-900 hover:to-blue-600 text-white font-semibold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 no-underline">
                            <EnvelopeIcon class="mr-2" />
                            team@marketingaihouston.com
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section id="contact-form" class="py-20 md:py-24 relative overflow-hidden">
        <!-- Background elements -->
        <!-- Commented out - floating blobs disabled (can be re-enabled if needed)
        <div class="absolute inset-0">
            <div class="absolute top-20 right-20 w-64 h-64 bg-gradient-to-br from-teal-600 to-blue-300 organic-blob opacity-10 animate-float"></div>
            <div class="absolute bottom-20 left-20 w-72 h-72 bg-gradient-to-br from-blue-600 to-blue-900 organic-leaf opacity-10 animate-float"></div>
            <div class="absolute top-1/2 left-1/4 w-96 h-96 bg-gradient-to-br from-blue-400 to-teal-500 organic-droplet opacity-5 animate-blob"></div>
        </div>
        -->

        <div class="container mx-auto max-w-4xl px-4 relative z-10">
            <!-- Header Section -->
            <div class="text-center mb-12">
                <h2 class="text-4xl md:text-5xl font-black mb-4">
                    <span class="text-gradient">Send Us a Message</span>
                </h2>
                <p class="text-xl text-gray-700 mb-2">Fill out the form below and we'll get back to you within 1 business day</p>
                <div class="flex items-center justify-center gap-2 text-gray-600">
                    <LockIcon class="text-teal-600" />
                    <span class="text-sm">Your information is secure and will never be shared</span>
                </div>
            </div>

            <!-- Form Container with Enhanced Styling -->
            <div class="relative group">
                <!-- Decorative glow effect on hover -->
                <div class="absolute -inset-1 bg-gradient-to-r from-teal-600 to-blue-600 rounded-3xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500"></div>

                <!-- Main form wrapper -->
                <div class="relative bg-white bg-opacity-90 backdrop-blur-md rounded-3xl px-0 shadow-2xl border-2 border-white border-opacity-60 transition-all duration-300 hover:shadow-3xl">
                    <!-- Decorative corner accents -->
                    <div class="absolute top-0 left-0 w-20 h-20 border-t-4 border-l-4 border-teal-600 rounded-tl-3xl opacity-30"></div>
                    <div class="absolute bottom-0 right-0 w-20 h-20 border-b-4 border-r-4 border-blue-600 rounded-br-3xl opacity-30"></div>

                    <!-- Google Form Facade (Lazy-loaded for performance) -->
                    <div class="w-full mx-auto">
                        <GoogleFormFacade
                            formUrl="https://docs.google.com/forms/d/e/1FAIpQLSfUTmSL4dEVHL1OLBZncgvPgU_S6vH8_GLOM4KlV1VohMKKow/viewform?embedded=true"
                            formHeight="2349"
                            formTitle="Contact Form"
                        />
                    </div>
                </div>
            </div>

            <!-- Trust indicators below form -->
            <div class="mt-8 text-center">
                <div class="inline-flex items-center gap-6 text-sm text-gray-600 flex-wrap justify-center">
                    <div class="flex items-center gap-2">
                        <ShieldIcon class="text-teal-600" />
                        <span>SSL Secured</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <ClockIcon class="text-blue-600" />
                        <span>24-hour Response Time</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <CheckCircleIcon class="text-teal-600" />
                        <span>No Spam Guarantee</span>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- FAQ Section -->
    <section class="py-20 md:py-24 relative overflow-hidden">
        <!-- Background elements -->
        <div class="absolute top-0 left-0 w-full h-full opacity-5">
            <div class="absolute top-0 right-0 w-96 h-96 bg-blue-600 rounded-full filter blur-3xl"></div>
        </div>

        <div class="container mx-auto max-w-4xl px-4 relative z-10">
            <div class="text-center mb-16">
                <div class="inline-flex items-center bg-white bg-opacity-80 backdrop-blur-sm px-6 py-3 rounded-full text-sm font-semibold text-gray-700 mb-6 border border-white border-opacity-50 shadow-sm">
                    <QuestionCircleIcon class="mr-2 text-teal-600" />
                    Questions
                </div>
                <h2 class="text-4xl md:text-5xl font-black mb-4">
                    <span class="text-gradient">Frequently Asked Questions</span>
                </h2>
                <p class="text-xl text-gray-700 max-w-2xl mx-auto">Straight answers ‚Äî no jargon, no hidden fine print.</p>
            </div>

            <div class="space-y-4 max-w-3xl mx-auto">
                <!-- FAQ 1 -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-xl overflow-hidden border border-white border-opacity-50" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                    <button class="accordion-trigger w-full text-left p-6 hover:bg-blue-50/30 focus:outline-none flex justify-between items-center md:pointer-events-none">
                        <span class="font-bold text-blue-900 flex items-center">
                            <span class="mr-3 text-2xl">üìû</span>
                            <span itemprop="name">Do you offer free consultations?</span>
                        </span>
                        <ChevronDownIcon class="text-blue-600 transition-transform duration-300 md:hidden" />
                    </button>
                    <div class="accordion-content" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                        <div class="p-6 pt-0 md:pt-3 text-gray-700" itemprop="text">
                            Yes ‚Äî every discovery call is free, friendly, and focused on your goals.
                        </div>
                    </div>
                </div>

                <!-- FAQ 2 -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-xl overflow-hidden border border-white border-opacity-50" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                    <button class="accordion-trigger w-full text-left p-6 hover:bg-blue-50/30 focus:outline-none flex justify-between items-center md:pointer-events-none">
                        <span class="font-bold text-blue-900 flex items-center">
                            <span class="mr-3 text-2xl">üïí</span>
                            <span itemprop="name">How long does a typical call take?</span>
                        </span>
                        <ChevronDownIcon class="text-blue-600 transition-transform duration-300 md:hidden" />
                    </button>
                    <div class="accordion-content" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                        <div class="p-6 pt-0 md:pt-3 text-gray-700" itemprop="text">
                            Most calls last 15‚Äì30 minutes. Just enough time to explore your needs and next steps.
                        </div>
                    </div>
                </div>

                <!-- FAQ 3 -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-xl overflow-hidden border border-white border-opacity-50" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                    <button class="accordion-trigger w-full text-left p-6 hover:bg-blue-50/30 focus:outline-none flex justify-between items-center md:pointer-events-none">
                        <span class="font-bold text-blue-900 flex items-center">
                            <span class="mr-3 text-2xl">üåê</span>
                            <span itemprop="name">Do you only work with businesses in Houston?</span>
                        </span>
                        <ChevronDownIcon class="text-blue-600 transition-transform duration-300 md:hidden" />
                    </button>
                    <div class="accordion-content" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                        <div class="p-6 pt-0 md:pt-3 text-gray-700" itemprop="text">
                            Not at all. We're proudly based in Houston, but we serve small business owners nationwide. Our process is fully remote-friendly.
                        </div>
                    </div>
                </div>

                <!-- FAQ 4 -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-xl overflow-hidden border border-white border-opacity-50" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                    <button class="accordion-trigger w-full text-left p-6 hover:bg-blue-50/30 focus:outline-none flex justify-between items-center md:pointer-events-none">
                        <span class="font-bold text-blue-900 flex items-center">
                            <span class="mr-3 text-2xl">‚úâÔ∏è</span>
                            <span itemprop="name">Can I just email you instead of booking a call?</span>
                        </span>
                        <ChevronDownIcon class="text-blue-600 transition-transform duration-300 md:hidden" />
                    </button>
                    <div class="accordion-content" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                        <div class="p-6 pt-0 md:pt-3 text-gray-700" itemprop="text">
                            Absolutely. Use our contact form or email us directly ‚Äî whatever works best for you.
                        </div>
                    </div>
                </div>

                <!-- FAQ 5 -->
                <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-xl overflow-hidden border border-white border-opacity-50" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                    <button class="accordion-trigger w-full text-left p-6 hover:bg-blue-50/30 focus:outline-none flex justify-between items-center md:pointer-events-none">
                        <span class="font-bold text-blue-900 flex items-center">
                            <span class="mr-3 text-2xl">üìÖ</span>
                            <span itemprop="name">What happens after I book a call?</span>
                        </span>
                        <ChevronDownIcon class="text-blue-600 transition-transform duration-300 md:hidden" />
                    </button>
                    <div class="accordion-content" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                        <div class="p-6 pt-0 md:pt-3 text-gray-700" itemprop="text">
                            You'll get a confirmation email with a calendar invite. We'll meet via Zoom or phone at your scheduled time.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Final CTA Section -->
    <section class="py-20 md:py-24 relative overflow-hidden bg-gradient-to-br from-blue-900 to-blue-600">
        <div class="container mx-auto max-w-4xl px-4 relative z-10 text-center">
            <h2 class="text-4xl md:text-5xl font-black mb-6 text-white">
                Let's Start with a Quick Conversation
            </h2>
            <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
                Pick a time, send a message, or just give us a call ‚Äî we're here to help.
            </p>

            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mt-8">
                <a href="#contact-options" class="inline-block bg-white text-blue-900 font-semibold py-4 px-12 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg no-underline text-center">
                    üëâ Schedule a <span class="bg-yellow-400 text-black px-2 py-1 rounded font-bold">FREE</span> Discovery Call
                </a>

                <a href="#contact-form" class="inline-block border-2 border-white text-white hover:bg-white hover:text-blue-900 font-semibold py-4 px-12 rounded-full transition-all duration-300 no-underline text-center">
                    üì© Send a Message
                </a>
            </div>
        </div>
    </section>

    <!-- ‚ö° External scripts for CSP compliance (deferred for non-blocking performance) -->
    <!-- These scripts don't affect hero LCP and are loaded after critical content -->
    <!-- google-form-handler.js removed - now handled by GoogleFormFacade component -->
    <script defer src={`${import.meta.env.BASE_URL}js/contact-page.js`}></script>

    <!-- Custom page-specific styles -->
    <style>
        /* Button spacing fixes - ensure buttons render as block-level elements */
        a.inline-block {
            display: inline-block !important;
        }

        a.flex {
            display: flex !important;
        }

        /* Ensure proper text rendering in buttons */
        a.inline-block, a.flex {
            white-space: normal;
            line-height: 1.5;
        }

        /* Custom styles */
        /* Commented out - floating blobs disabled (can be re-enabled if needed)
        .organic-blob {
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }

        .organic-droplet {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }

        .organic-leaf {
            border-radius: 20% 80% 20% 80% / 80% 20% 80% 20%;
        }
        */

        /* FAQ Accordion */
        .accordion-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }

        .accordion-open .accordion-content {
            max-height: 500px;
            transition: max-height 0.5s ease-in;
        }

        /* Desktop: Always show content */
        @media (min-width: 768px) {
            .accordion-content {
                max-height: none !important;
                overflow: visible !important;
            }

            .accordion-trigger {
                pointer-events: none !important;
            }
        }

        /* Animations */
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
            100% { transform: translateY(0px); }
        }

        @keyframes blob {
            0% { transform: translate(0px, 0px) scale(1); }
            33% { transform: translate(30px, -50px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
            100% { transform: translate(0px, 0px) scale(1); }
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }

        .animate-blob {
            animation: blob 7s infinite;
        }
    </style>

</MainLayout>
