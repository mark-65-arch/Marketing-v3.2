                        <div class="flex items-center">
                            <i class="fas fa-robot text-blue-600 mr-2"></i>
                            <span class="text-gray-400">AI-Ready</span>
                        </div>
                    </div>
                    <p class="text-gray-400 mt-4">Proudly serving small businesses nationwide.</p>
                </div>
            </div>

            <div class="border-t border-gray-800 mt-8 pt-8 text-center">
                <p class="text-gray-400">© Marketing AI Houston. All rights reserved.</p>
                <div class="mt-2">
                    <a href="#" class="text-gray-400 hover:text-white transition-colors mx-2">Privacy Policy</a>
                    <span class="text-gray-600">|</span>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors mx-2">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('active');
            });
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const element = e.target as HTMLAnchorElement;
                const href = element.getAttribute('href');
                if (href) {
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });

        // Enhanced form validation with visual error feedback
        const contactForm = document.getElementById('contact-form') as HTMLFormElement;
        if (contactForm) {
            // Clear errors function
            function clearErrors() {
                const errorElements = document.querySelectorAll('.error-message');
                const inputElements = document.querySelectorAll('.form-input');

                errorElements.forEach(el => {
                    el.classList.remove('show');
                    (el as HTMLElement).textContent = '';
                });

                inputElements.forEach(el => {
                    el.classList.remove('error');
                });
            }

            // Show error function
            function showError(fieldId: string, message: string) {
                const input = document.getElementById(fieldId);
                const errorElement = document.getElementById(`${fieldId}-error`);

                if (input && errorElement) {
                    input.classList.add('error');
                    errorElement.textContent = message;
                    errorElement.classList.add('show');
                }
            }

            contactForm.addEventListener('submit', function(e) {
                console.log('\n🚀 FORM SUBMISSION STARTED');
                console.log('===========================');
                console.log('Mode: TEST (using local endpoint)');
                console.log('Time:', new Date().toLocaleTimeString());

                // Clear previous errors
                clearErrors();

                // Get form values for validation
                const nameInput = document.getElementById('name') as HTMLInputElement;
                const emailInput = document.getElementById('email') as HTMLInputElement;
                const messageInput = document.getElementById('message') as HTMLTextAreaElement;
                const phoneInput = document.getElementById('phone') as HTMLInputElement;
                const businessInput = document.getElementById('business') as HTMLInputElement;
                const gotchaInput = document.querySelector('input[name="_gotcha"]') as HTMLInputElement;

                if (nameInput && emailInput && messageInput && phoneInput) {
                    const name = nameInput.value.trim();
                    const email = emailInput.value.trim();
                    const message = messageInput.value.trim();
                    const phone = phoneInput.value.trim();
                    const business = businessInput ? businessInput.value.trim() : '';
                    const gotcha = gotchaInput ? gotchaInput.value : '';

                    console.log('\n📝 FORM DATA');
                    console.log('=============');
                    console.log('Name:', name || '(empty)');
                    console.log('Email:', email || '(empty)');
                    console.log('Phone:', phone || '(empty)');
                    console.log('Business:', business || '(not provided)');
                    console.log('Message:', message || '(empty)');
                    console.log('Honeypot:', gotcha || '(empty - good!)');

                    let isValid = true;

                    // Required fields validation
                    console.log('\n🔍 CLIENT-SIDE VALIDATION');
                    console.log('=========================');

                    if (!name) {
                        showError('name', 'Full name is required');
                        console.log('❌ Name field is empty');
                        isValid = false;
                    } else if (name.length > 100) {
                        showError('name', 'Name must be less than 100 characters');
                        console.log('❌ Name field too long');
                        isValid = false;
                    } else {
                        console.log('✅ Name validation passed');
                    }

                    if (!email) {
                        showError('email', 'Email address is required');
                        console.log('❌ Email field is empty');
                        isValid = false;
                    } else {
                        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                        if (!emailRegex.test(email)) {
                            showError('email', 'Please enter a valid email address');
                            console.log('❌ Email format invalid:', email);
                            isValid = false;
                        } else if (email.length > 100) {
                            showError('email', 'Email must be less than 100 characters');
                            console.log('❌ Email field too long');
                            isValid = false;
                        } else {
                            console.log('✅ Email validation passed');
                        }
                    }

                    if (!phone) {
                        showError('phone', 'Phone number is required');
                        console.log('❌ Phone field is empty');
                        isValid = false;
                    } else {
                        const phoneRegex = /^[\+]?[(]?[\d\s\-\(\)]{10,}$/;
                        const digitsOnly = phone.replace(/\D/g, '');

                        if (digitsOnly.length < 10) {
                            showError('phone', 'Phone number must have at least 10 digits');
                            console.log('❌ Phone too short. Digits found:', digitsOnly.length);
                            isValid = false;
                        } else if (!phoneRegex.test(phone)) {
                            showError('phone', 'Please enter a valid phone number (e.g., (123) 456-7890)');
                            console.log('❌ Phone format invalid:', phone);
                            isValid = false;
                        } else if (phone.length > 20) {
                            showError('phone', 'Phone number is too long');
                            console.log('❌ Phone field too long');
                            isValid = false;
                        } else {
                            console.log('✅ Phone validation passed. Digits:', digitsOnly.length);
                        }
                    }

                    if (!message) {
                        showError('message', 'Message is required');
                        console.log('❌ Message field is empty');
                        isValid = false;
                    } else if (message.length > 1000) {
                        showError('message', 'Message must be less than 1000 characters');
                        console.log('❌ Message field too long');
                        isValid = false;
                    } else {
                        console.log('✅ Message validation passed');
                    }

                    // Business field validation (optional)
                    if (business && business.length > 100) {
                        showError('business', 'Business name must be less than 100 characters');
                        console.log('❌ Business field too long');
                        isValid = false;
                    }

                    // Security checks
                    console.log('\n🛡️ SECURITY PREVIEW');
                    console.log('===================');

                    if (gotcha && gotcha.trim() !== '') {
                        console.log('⚠️ WARNING: Honeypot field has value (potential bot)');
                        console.log('   Server will likely block this submission');
                    } else {
                        console.log('✅ Honeypot field empty (good)');
                    }

                    const spamKeywords = ['casino', 'viagra', 'cialis', 'lottery', 'winner'];
                    const allText = (name + ' ' + email + ' ' + message).toLowerCase();
                    const foundKeywords = spamKeywords.filter(keyword => allText.includes(keyword));

                    if (foundKeywords.length > 0) {
                        console.log('⚠️ WARNING: Potential spam keywords detected');
                        console.log('   Keywords found:', foundKeywords);
                        console.log('   Server will likely block this submission');
                    } else {
                        console.log('✅ No obvious spam keywords detected');
                    }

                    // Prevent submission if validation failed
                    if (!isValid) {
                        e.preventDefault();
                        console.log('\n❌ FORM SUBMISSION BLOCKED');
                        console.log('Please fix the errors highlighted in red');
                        return;
                    }

                    console.log('\n✅ CLIENT-SIDE VALIDATION PASSED');
                    console.log('Form will now submit to test endpoint');
                    console.log('Check server console for detailed security analysis');

                    // Show loading state
                    const submitButton = contactForm.querySelector('button[type="submit"]') as HTMLButtonElement;
                    if (submitButton) {
                        submitButton.disabled = true;
                        submitButton.textContent = 'Processing...';
                        console.log('🔄 Button state changed to loading');
                    }
                }

                // Let the form submit to our test endpoint
            });

            // Clear errors when user starts typing
            const formInputs = contactForm.querySelectorAll('.form-input');
            formInputs.forEach(input => {
                input.addEventListener('input', function(event) {
                    const target = event.target as HTMLElement;
                    const fieldId = target.id;
                    const errorElement = document.getElementById(`${fieldId}-error`);

                    if (errorElement && errorElement.classList.contains('show')) {
                        target.classList.remove('error');
                        errorElement.classList.remove('show');
                        errorElement.textContent = '';
                    }
                });
            });
        }
    </script>
</body>
