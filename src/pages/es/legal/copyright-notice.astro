---
import MainLayout from '../../../layouts/MainLayout.astro';

const SITE = import.meta.env.SITE;
const BASE_URL = import.meta.env.BASE_URL;
const currentURL = `${SITE}${BASE_URL}es/legal/copyright-notice`;

const breadcrumbs = [
  { name: 'Inicio', url: `${SITE}${BASE_URL}es/` },
  { name: 'Legal', url: `${SITE}${BASE_URL}es/legal/` },
  { name: 'Aviso de Derechos de Autor', url: currentURL }
];

const alternateLanguages = [
  { lang: 'en', url: `${SITE}${BASE_URL}legal/copyright-notice` },
  { lang: 'es', url: `${SITE}${BASE_URL}es/legal/copyright-notice` }
];
---

<MainLayout
  title="Aviso de Derechos de Autor | Marketing AI Houston"
  description="Información sobre derechos de autor y propiedad intelectual de Marketing AI Houston. Conozca sobre la propiedad del contenido, usos permitidos y procedimientos de remoción DMCA."
