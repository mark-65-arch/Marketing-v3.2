    color: #075985;
  }

  .prose h2 {
    color: #0c4a6e;
    font-weight: 700;
    margin-top: 2em;
    margin-bottom: 1em;
    font-size: 1.5em;
  }

  .prose h3 {
    color: #0c4a6e;
    font-weight: 600;
    margin-top: 1.5em;
    margin-bottom: 0.75em;
    font-size: 1.25em;
  }

  .prose p {
    margin-bottom: 1em;
    line-height: 1.75;
  }

  .prose .lead {
    font-size: 1.125em;
    color: #0369a1;
    margin-bottom: 1.5em;
  }

  .prose a {
    color: #0284c7;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #075985;
  }

  .prose ul {
    list-style-type: disc;
    margin-left: 1.5em;
    margin-bottom: 1em;
  }

  .prose li {
    margin-bottom: 0.5em;
  }

  .prose section {
    margin-bottom: 2em;
  }
</style>
