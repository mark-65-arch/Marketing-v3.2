---
import MainLayout from '../../layouts/MainLayout.astro';

const SITE = import.meta.env.SITE;
const BASE_URL = import.meta.env.BASE_URL;
const currentURL = `${SITE}${BASE_URL}legal/terms-of-service/`;

const breadcrumbs = [
  { name: 'Home', url: `${SITE}${BASE_URL}` },
  { name: 'Legal', url: `${SITE}${BASE_URL}legal/` },
  { name: 'Terms of Service', url: currentURL }
];

const alternateLanguages = [
  { lang: 'en', url: `${SITE}${BASE_URL}legal/terms-of-service/` },
  { lang: 'es', url: `${SITE}${BASE_URL}es/legal/terms-of-service/` }
];
---

<MainLayout
  title="Terms of Service | Marketing AI Houston"
  description="Terms and conditions governing the use of Marketing AI Houston's website and services. Read our complete terms of service for web design, SEO, and digital marketing services."
  canonicalURL={currentURL}
  breadcrumbs={breadcrumbs}
  lang="en"
  alternateLanguages={alternateLanguages}
>
  <main class="min-h-screen bg-gradient-to-b from-ocean-50 to-white py-12 sm:py-16 lg:py-20">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
