---
import MainLayout from '../layouts/MainLayout.astro';
import type { BreadcrumbItem } from '../utils/seo.ts';
import ClockIcon from '../components/icons/ClockIcon.astro';
import PhoneIcon from '../components/icons/PhoneIcon.astro';
import LightbulbIcon from '../components/icons/LightbulbIcon.astro';
import EnvelopeIcon from '../components/icons/EnvelopeIcon.astro';

// üîç SEO Configuration
const pageTitle = 'Thank You';
const pageDescription = 'Thank you for contacting Marketing AI Houston. We\'ll get back to you within 1 business day with a custom strategy for your business.';
const canonicalURL = `${import.meta.env.SITE}${import.meta.env.BASE_URL}success`;

// üçû Breadcrumbs
const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', url: import.meta.env.BASE_URL },
  { name: 'Thank You', url: `${import.meta.env.BASE_URL}success` }
];
---

<MainLayout
  title={pageTitle}
  description={pageDescription}
  canonicalURL={canonicalURL}
  breadcrumbs={breadcrumbs}
  pageType="home"
  currentPath="/success"
  noindex={true}
>

    <!-- Success Section -->
    <section class="min-h-screen flex items-center justify-center relative overflow-hidden">
        <!-- Background elements -->
        <div class="absolute inset-0">
            <div class="absolute top-20 left-20 w-64 h-64 bg-gradient-to-br from-green-500 to-teal-600 organic-blob opacity-20 animate-float"></div>
            <div class="absolute top-40 right-20 w-72 h-72 bg-gradient-to-br from-teal-600 to-blue-300 organic-leaf opacity-20 animate-float"></div>
            <div class="absolute bottom-20 left-1/3 w-80 h-80 bg-gradient-to-br from-blue-600 to-green-500 organic-droplet opacity-20 animate-float"></div>
        </div>

        <div class="relative z-10 px-4 max-w-4xl mx-auto text-center">
            <!-- Success Icon -->
            <div class="text-8xl mb-8 animate-bounce-slow">‚úÖ</div>

            <!-- Headline -->
            <h1 class="text-5xl md:text-6xl font-black text-gray-900 leading-tight mb-6">
                Thank You!
            </h1>

            <!-- Subheadline -->
            <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto leading-relaxed">
                Your message has been sent successfully. We'll get back to you within 1 business day.
            </p>

            <!-- What happens next -->
            <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white border-opacity-50 mb-12 max-w-2xl mx-auto">
                <h2 class="text-2xl font-bold mb-4 text-blue-900">What happens next?</h2>
                <div class="space-y-3 text-left">
                    <div class="flex items-start">
                        <ClockIcon class="text-blue-600 mt-1 mr-3" />
                        <span class="text-gray-700">We'll review your message within a few hours</span>
                    </div>
                    <div class="flex items-start">
                        <PhoneIcon class="text-blue-600 mt-1 mr-3" />
                        <span class="text-gray-700">One of our team members will reach out to discuss your needs</span>
                    </div>
                    <div class="flex items-start">
                        <LightbulbIcon class="text-blue-600 mt-1 mr-3" />
                        <span class="text-gray-700">We'll provide a custom strategy for your business</span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center mb-12">
                <a href={import.meta.env.BASE_URL} class="bg-gradient-to-r from-blue-600 to-teal-600 hover:from-blue-900 hover:to-blue-600 text-white font-semibold py-4 px-12 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg">
                    ‚Üê Back to Home
                </a>

                <a href={`${import.meta.env.BASE_URL}contact#contact-options`} class="border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white font-semibold py-4 px-12 rounded-full transition-all duration-300">
                    Send Another Message
                </a>
            </div>

            <!-- Contact Info -->
            <div class="bg-white bg-opacity-70 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-white border-opacity-50 max-w-lg mx-auto">
                <h3 class="text-lg font-bold mb-4 text-blue-900">Need immediate assistance?</h3>
                <div class="space-y-2">
                    <p class="text-gray-700">
                        <PhoneIcon class="text-blue-600 mr-2" />
                        <a href="tel:+12815440572" class="text-blue-600 hover:text-blue-800 font-medium">(281) 544-0572</a>
                    </p>
                    <p class="text-gray-700">
                        <EnvelopeIcon class="text-blue-600 mr-2" />
                        <a href="mailto:team@marketingaihouston.com" class="text-blue-600 hover:text-blue-800 font-medium">team@marketingaihouston.com</a>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Custom page-specific styles -->
    <style>
        /* Custom styles */
        .organic-blob {
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }

        .organic-droplet {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }

        .organic-leaf {
            border-radius: 20% 80% 20% 80% / 80% 20% 80% 20%;
        }

        /* Animations */
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
            100% { transform: translateY(0px); }
        }

        @keyframes bounce {
            0%, 20%, 53%, 80%, 100% { transform: translateY(0); }
            40%, 43% { transform: translateY(-30px); }
            70% { transform: translateY(-15px); }
            90% { transform: translateY(-4px); }
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }

        .animate-bounce-slow {
            animation: bounce 2s infinite;
        }
    </style>

</MainLayout>
